{
  "name": "betterExperience",
  "version": "0.13.5",
  "manifest_version": 2,
  "description": "Improving myExperience",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "page_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "web_accessible_resources": [
    "table.css",
    "all.css",
    "apps.css"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://myexperience.sfu.ca/myAccount/co-op/postings.htm"
      ],
      "js": [
        "postings.js"
      ]
    },
    {
      "matches": [
        "https://myexperience.sfu.ca/myAccount/co-op/applications.htm"
      ],
      "js": [
        "apps.js"
      ]
    },
    {
      "matches": ["https://myexperience.sfu.ca/myAccount/*"],
      "js": [
        "all.js"
      ]
    }
  ]
}
